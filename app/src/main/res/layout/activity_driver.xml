<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.driver.DriverActivity"
    android:background="@color/colorWhite">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="available"
        android:textColor="@color/primary_text"
        android:textSize="30sp"
        app:switchPadding="15dp" />

    <EditText
        android:id="@+id/edt_driverId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_available"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/colorAccent"
        android:hint="Enter ID"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/secondary_text" />

    <EditText
        android:id="@+id/edt_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_driverId"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/colorAccent"
        android:hint="Enter distance"
        android:inputType="numberDecimal"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/secondary_text" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_distance"
        android:backgroundTint="@color/colorAccent"
        android:layout_margin="20dp"
        android:layout_marginTop="50dp"
        android:id="@+id/btnUpdateDistance"
        android:text="Update distance"/>


</RelativeLayout>